<% include ../partials/header %>

<Section id="campground-form">
    <div class="container">
        <div class="row">
            <div class="col s12">
                <h3 class="center form-header">Edit campground</h3>
            </div>
            <div class="col s12">
                <div class="card center-align">
                    <div class="card-content">
                        <h2 class="card-title">Edit <%= campground.name %></h2>
                        <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                          <div class="row">
                            <div class="input-field col s12">
                              <i class="material-icons prefix">terrain</i>
                              <input name="campground[name]" id="name" type="text" class="validate" value="<%= campground.name %>">
                              <label for="name">Campground</label>
                            </div>
                          </div>
                          <div class="row">
                            <div class="input-field col s12">
                              <i class="material-icons prefix">attach_money</i>
                              <input name="campground[price]" id="price" type="number" min="0.01" step="0.01" class="validate" value="<%= campground.price %>">
                              <label for="price">Price</label>
                            </div>
                          </div>
                          <div class="row">
                            <div class="input-field col s12">
                              <i class="material-icons prefix">image</i>
                              <input name="campground[image]" id="image" type="text" class="validate" value="<%= campground.image %>">
                              <label for="image">Image</label>
                            </div>
                          </div>
                          <div class="row">
                            <div class="input-field col s12">
                              <i class="material-icons prefix">short_text</i>
                              <textarea name="campground[description]" id="description" class="materialize-textarea hello"><%= campground.description %></textarea>
                              <label for="description">Description</label>
                            </div>
                          </div>
                          <button class="btn-flat btn-large red darken-1 white-text waves-effect waves-light form-btn">Submit</button>
                        </form>
                    </div>
                    <div class="card-action">
                      <a href="/campgrounds/<%= campground._id %>">Back to <%= campground.name %></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Section>




